<template>
	<wxs src="../../models/Game.wxs" module="Game"></wxs>
	<wxs src="../../models/Play.wxs" module="Play"></wxs>
	<view wx:if="{{play}}">
		<wui-panel title="基本信息">
			<wui-field type="custom" label="比赛类型">{{play.match_info.name}} - {{play.match_info.detail.type_table[play.type].name}}</wui-field>
			<wui-field type="custom" label="参与选手">
				<view class="flex-field">
					<view class="flex-field__1">{{Play.getParticipant(play, 0).player.name}}</view>
					<view class="flex-field__2">VS</view>
					<view class="flex-field__3">{{Play.getParticipant(play, 1).player.name}}</view>
				</view>
			</wui-field>
			<wui-field type="custom" label="两局总分">
				<view class="flex-field">
					<view class="flex-field__1">{{Play.getParticipant(play, 0).detail.score}}</view>
					<view class="flex-field__2">:</view>
					<view class="flex-field__3">{{Play.getParticipant(play, 1).detail.score}}</view>
				</view>
			</wui-field>
			<wui-field wx:if="{{play.type!=='friendly'}}" type="custom" label="比赛结果">
				<view class="flex-field">
					<view class="flex-field__1">{{$.enums.pk.result[Play.getParticipant(play, 0).result]}}</view>
					<view class="flex-field__2"></view>
					<view class="flex-field__3">{{$.enums.pk.result[Play.getParticipant(play, 1).result]}}</view>
				</view>
			</wui-field>
			<wui-field wx:if="{{play.type!=='friendly'}}" type="custom" label="赛前段位">
				<view class="flex-field">
					<app-pk-player-state class="flex-field__1" player-state="{{Play.getParticipant(play, 0).state0}}" show-coin="{{false}}"></app-pk-player-state>
					<view class="flex-field__2"></view>
					<app-pk-player-state class="flex-field__3" player-state="{{Play.getParticipant(play, 1).state0}}" show-coin="{{false}}"></app-pk-player-state>
				</view>
			</wui-field>
			<wui-field wx:if="{{play.type!=='friendly'}}" type="custom" label="赛后段位">
				<view class="flex-field">
					<app-pk-player-state class="flex-field__1" player-state="{{Play.getParticipant(play, 0).state1}}" show-coin="{{false}}"></app-pk-player-state>
					<view class="flex-field__2"></view>
					<app-pk-player-state class="flex-field__3" player-state="{{Play.getParticipant(play, 1).state1}}" show-coin="{{false}}"></app-pk-player-state>
				</view>
			</wui-field>
			<wui-field type="custom" label="积分变化">
				<view class="flex-field">
					<view class="flex-field__1 flex-field__coin-change">
						<app-pk-player-state player-state="{{Play.getParticipant(play, 0).state0}}" show-rank="{{false}}" vertical="{{true}}"></app-pk-player-state>
						<text decode="{{true}}">&nbsp;&nbsp;>&nbsp;&nbsp;</text>
						<app-pk-player-state player-state="{{Play.getParticipant(play, 0).state1}}" show-rank="{{false}}" vertical="{{true}}"></app-pk-player-state>
					</view>
					<view class="flex-field__2"></view>
					<view class="flex-field__3 flex-field__coin-change">
						<app-pk-player-state player-state="{{Play.getParticipant(play, 1).state0}}" show-rank="{{false}}" vertical="{{true}}"></app-pk-player-state>
						<text decode="{{true}}">&nbsp;&nbsp;>&nbsp;&nbsp;</text>
						<app-pk-player-state player-state="{{Play.getParticipant(play, 1).state1}}" show-rank="{{false}}" vertical="{{true}}"></app-pk-player-state>
					</view>
				</view>
			</wui-field>
			<wui-field type="custom" label="比赛日期">{{play.play_date}}</wui-field>
			<wui-field type="custom" label="裁判">{{play.judge.name}}</wui-field>
			<wui-field type="custom" label="当前状态">
				<text style="color:{{playStatusColor[play.status]}}">{{play.status_names[play.status]}}</text>
			</wui-field>
		</wui-panel>
		<wui-panel title="第一局：{{Play.getParticipant(play, 0).player.name}}先手，{{Game.formatScore(play.games[0])}} : {{Game.formatScore(play.games[1])}}">
			<app-game games="{{[ play.games[0], play.games[1] ]}}" editable="{{false}}"></app-game>
		</wui-panel>
		<wui-panel title="第二局：{{Play.getParticipant(play, 1).player.name}}先手，{{Game.formatScore(play.games[2])}} : {{Game.formatScore(play.games[3])}}">
			<app-game games="{{[ play.games[2], play.games[3] ]}}" editable="{{false}}"></app-game>
		</wui-panel>
		<wui-panel title="其他信息">
			<wui-field wx:for="{{basicBonus}}" wx:key="identify" wx:for-index="identify" wx:for-item="label"
			           type="custom" label="{{label}}">
				<view class="flex-field">
					<view class="flex-field__1"><app-pk-dstate dstate="{{Play.getParticipant(play, 0).detail.basic_effects[identify].detail.dstate}}"></app-pk-dstate></view>
					<view class="flex-field__2"></view>
					<view class="flex-field__3"><app-pk-dstate dstate="{{Play.getParticipant(play, 1).detail.basic_effects[identify].detail.dstate}}"></app-pk-dstate></view>
				</view>
			</wui-field>
			<wui-field type="custom" label="道具效果">
				<view class="flex-field">
					<view class="flex-field__1">
						<view wx:if="{{!Play.getParticipant(play, 0).detail.extra_effects.length}}">无</view>
						<block wx:else>
							<view wx:for="{{Play.getParticipant(play, 0).detail.extra_effects}}" wx:key="index" wx:for-index="index" wx:for-item="effect">
								effect.name <app-pk-dstate dstate="{{effect.detail.dstate}}"></app-pk-dstate>
							</view>
						</block>
					</view>
					<view class="flex-field__2"></view>
					<view class="flex-field__3">
						<view wx:if="{{!Play.getParticipant(play, 1).detail.extra_effects.length}}">无</view>
						<block wx:else>
							<view wx:for="{{Play.getParticipant(play, 1).detail.extra_effects}}" wx:key="index" wx:for-index="index" wx:for-item="effect">
								effect.name <app-pk-dstate dstate="{{effect.detail.dstate}}"></app-pk-dstate>
							</view>
						</block>
					</view>
				</view>
			</wui-field>
		</wui-panel>
	</view>
</template>

<script>
	
	export default {
		config: {
			usingComponents: {
				'app-game': './game',
				'app-pk-player-state': './pk-player-state',
				'app-pk-dstate': './pk-dstate',
				'wui-panel': '@yapple/wui-panel',
				'wui-field': '@yapple/wui-field'
			},
		},
		behaviors: [],
		properties: {
		},
		data: {
			play: null,
			basicBonus: {
				'CoinBonusHighScore': '高分奖励',
				'CoinBonusSplit': '分屏奖励',
				'CoinBonusLowScore': '低分惩罚'
			}
		},
		lifetimes: {
			attached() {
				this.setData({
					$: $.AppData,
					playStatusColor: {
						'new': $.AppData.style.dangerColor,
						'filled': $.AppData.style.warnColor,
						'player_accepted': $.AppData.style.warnColor,
						'accepted': $.AppData.style.successColor,
						'player_refused': $.AppData.style.dangerColor,
						'refused': $.AppData.style.dangerColor
					}
				})
			}
		},
		methods: {
			initial(play) {
				this.setData({ play });
			},
			getShareTitle() {
				let playerNameA = this.data.play.participants[this.data.play.player_ids[0]].player.name;
				let playerNameB = this.data.play.participants[this.data.play.player_ids[1]].player.name;
				let playType = $.AppData.matches.pk[0].detail.type_table[this.data.play.type].name;
				let scoreA = this.data.play.participants[this.data.play.player_ids[0]].detail.score;
				let scoreB = this.data.play.participants[this.data.play.player_ids[1]].detail.score;
				return `【${playType}】${playerNameA} VS ${playerNameB}：比分${scoreA}:${scoreB}`;
			}
		},
	}

</script>
<style lang="less">
	.flex-field {
		flex-grow: 1;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.flex-field__2 {
		flex-grow: 1;
		text-align: center;
	}
	.flex-field__1,.flex-field__3 {
		text-align: center;
		width: 220px;
	}
	.flex-field__coin-change {
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>