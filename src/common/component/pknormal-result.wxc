					<view class="flex-field__3 flex-field__coin-change">
						<app-pk-player-state player-state="{{play.participants[play.player_ids[1]].state0}}" show-rank="{{false}}" vertical="{{true}}"></app-pk-player-state>
						<text decode="{{true}}">&nbsp;&nbsp;>&nbsp;&nbsp;</text>
						<app-pk-player-state player-state="{{play.participants[play.player_ids[1]].state1}}" show-rank="{{false}}" vertical="{{true}}"></app-pk-player-state>
					</view>
				</view>
			</wui-field>
			<wui-field wx:for="{{play.detail['effects']}}" wx:key="index"
