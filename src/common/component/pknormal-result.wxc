				<view class="flex-field">
					<view class="flex-field__1">{{play.participants[play.player_ids[0]].player.name}}</view>
					<view class="flex-field__2">VS</view>
					<view class="flex-field__3">{{play.participants[play.player_ids[1]].player.name}}</view>
				</view>
			</wui-field>
			<wui-field type="custom" label="两局总分">
				<view class="flex-field">
					<view class="flex-field__1">{{play.participants[play.player_ids[0]].detail.score}}</view>
					<view class="flex-field__2">:</view>
					<view class="flex-field__3">{{play.participants[play.player_ids[1]].detail.score}}</view>
				</view>
			</wui-field>
			<wui-field wx:if="{{play.type!=='friendly'}}" type="custom" label="比赛结果">
				<view class="flex-field">
					<view class="flex-field__1">{{$.enums.pk.result[play.participants[play.player_ids[0]].result]}}</view>
					<view class="flex-field__2"></view>
					<view class="flex-field__3">{{$.enums.pk.result[play.participants[play.player_ids[1]].result]}}</view>
				</view>
			</wui-field>
			<wui-field wx:if="{{play.type!=='friendly'}}" type="custom" label="赛前段位">
				<view class="flex-field">
					<app-pk-player-state class="flex-field__1" player-state="{{play.participants[play.player_ids[0]].state0}}" show-coin="{{false}}"></app-pk-player-state>
					<view class="flex-field__2"></view>
					<app-pk-player-state class="flex-field__3" player-state="{{play.participants[play.player_ids[1]].state0}}" show-coin="{{false}}"></app-pk-player-state>
				</view>
			</wui-field>
			<wui-field wx:if="{{play.type!=='friendly'}}" type="custom" label="赛后段位">
				<view class="flex-field">
					<app-pk-player-state class="flex-field__1" player-state="{{play.participants[play.player_ids[0]].state1}}" show-coin="{{false}}"></app-pk-player-state>
					<view class="flex-field__2"></view>
					<app-pk-player-state class="flex-field__3" player-state="{{play.participants[play.player_ids[1]].state1}}" show-coin="{{false}}"></app-pk-player-state>
				</view>
			</wui-field>
			<wui-field type="custom" label="比赛日期">{{play.play_date}}</wui-field>
			<wui-field type="custom" label="当前状态">
				<text style="color:{{playStatusColor[play.status]}}">{{play.status_names[play.status]}}</text>
			</wui-field>
		</wui-panel>
		<wui-panel title="积分信息">
			<wui-field type="custom" label="积分变化">
				<view class="flex-field">
					<view class="flex-field__1 flex-field__coin-change">
						<app-pk-player-state player-state="{{play.participants[play.player_ids[0]].state0}}" show-rank="{{false}}" vertical="{{true}}"></app-pk-player-state>
						<text decode="{{true}}">&nbsp;&nbsp;>&nbsp;&nbsp;</text>
						<app-pk-player-state player-state="{{play.participants[play.player_ids[0]].state1}}" show-rank="{{false}}" vertical="{{true}}"></app-pk-player-state>
					</view>
