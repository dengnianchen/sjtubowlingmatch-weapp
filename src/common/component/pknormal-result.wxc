				<view class="flex-field">
					<view class="flex-field__1"><app-pk-dstate dstate="{{play.participants[play.player_ids[0]].detail.effects[item.id]}}"></app-pk-dstate></view>
					<view class="flex-field__2"></view>
					<view class="flex-field__3"><app-pk-dstate dstate="{{play.participants[play.player_ids[1]].detail.effects[item.id]}}"></app-pk-dstate></view>
