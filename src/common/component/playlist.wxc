			usingComponents: {
				'wui-icon': '@yapple/wui-icon'
			}
		},
		behaviors: [ ],
		properties: {
			play: {
				type: Object,
			},
			mode: {
				type: String,
				value: 'normal' // 有边框和无边框 normal, none
			}
		},
		data: {},
		methods: {
			_onItemClicked(e) {
				$.Http.submit(e);
